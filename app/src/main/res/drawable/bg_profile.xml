<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/white" />
            <gradient
                android:startColor="#BBB"
                android:centerColor="#BBB"
                android:endColor="@color/white"
                android:angle="-90"
                />
            <corners android:bottomLeftRadius="28dp" android:bottomRightRadius="28dp" />
        </shape>
    </item>
    <item android:bottom="16dp">
        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="28dp" android:bottomRightRadius="28dp" />
        </shape>
    </item>
    <item android:bottom="40dp"
        android:drawable="@drawable/bg_profile_img"
        android:gravity="fill_vertical">
        <shape>
            <corners android:bottomRightRadius="16dp" />
        </shape>
    </item>

</layer-list>

